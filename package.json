{
	"name": "isguard-ts",
	"version": "3.1.2",
	"description": "a typescript library for building type guards quickly while maintaining type safety",
	"main": "dist/index.js",
	"scripts": {
		"test": "npx vitest --typecheck --run",
		"build": "npx tsc -b",
		"pub": "npm run test && npm run build && npm publish",
		"prepare": "npx husky"
	},
	"keywords": [
		"assert",
		"builder",
		"check",
		"guard",
		"is",
		"is array",
		"is enum",
		"is instanceof",
		"is intersection",
		"is lazy",
		"is literal",
		"is map",
		"is union",
		"is record",
		"is refine",
		"is set",
		"is tuple",
		"is type",
		"is object",
		"is typeof",
		"is optional",
		"is maybe",
		"is value",
		"ts",
		"typescript",
		"typeguards",
		"types",
		"validate"
	],
	"homepage": "https://github.com/razhayat/isguard-ts#readme",
	"bugs": {
		"url": "https://github.com/razhayat/isguard-ts/issues"
	},
	"author": {
		"name": "Raz Hayat"
	},
	"license": "ISC",
	"files": [
		"dist/*"
	],
	"repository": {
		"type": "git",
		"url": "https://github.com/razhayat/isguard-ts"
	},
	"peerDependencies": {
		"zod": ">= 3.20.0 < 5.0.0"
	},
	"peerDependenciesMeta": {
		"zod": {
			"optional": true
		}
	},
	"devDependencies": {
		"@types/node": "^24.7.2",
		"husky": "^9.1.7",
		"typescript": "^5.6.2",
		"vitest": "^2.1.1",
		"zod": "^4.1.12"
	}
}
